<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
		    	android:startColor="#DDDDDD"
		    	android:endColor="#F0F0F0"
                android:angle="270" />
            <stroke
		        android:width="1dp"
                android:color="#B3B3B3" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
		    	android:startColor="#FFFFFF"
		    	android:endColor="#FDFDFD"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#B3B3B3"  />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>